<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ubb.gui.ProfileController"
      alignment="TOP_CENTER"
      spacing="25"
      styleClass="profile-root">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Title -->
    <Label text="Profile"
           styleClass="profile-title"/>

    <!-- Top section -->
    <HBox spacing="40" alignment="CENTER">

        <!-- Profile picture -->
        <VBox spacing="10" alignment="CENTER">
            <StackPane>
                <ImageView fx:id="profileImageView"
                           fitWidth="140"
                           fitHeight="140"
                           preserveRatio="true"
                           styleClass="profile-image"/>
            </StackPane>

            <Button fx:id="changePictureButton"
                    text="Change picture"
                    styleClass="secondary-button"/>
        </VBox>

        <!-- User info -->
        <GridPane hgap="10" vgap="12">

            <columnConstraints>
                <ColumnConstraints halignment="RIGHT"/>
                <ColumnConstraints halignment="LEFT"/>
            </columnConstraints>

            <!-- Row 0 -->
            <Label text="Username:"
                   GridPane.rowIndex="0"
                   GridPane.columnIndex="0"
                   styleClass="field-label"/>

            <Label fx:id="usernameLabel"
                   GridPane.rowIndex="0"
                   GridPane.columnIndex="1"
                   styleClass="field-value"/>

            <!-- Row 1 -->
            <Label text="Email:"
                   GridPane.rowIndex="1"
                   GridPane.columnIndex="0"
                   styleClass="field-label"/>

            <Label fx:id="emailLabel"
                   GridPane.rowIndex="1"
                   GridPane.columnIndex="1"
                   styleClass="field-value"/>

        </GridPane>
    </HBox>

    <!-- Stats -->
    <HBox spacing="50" alignment="CENTER">
        <VBox alignment="CENTER">
            <Label fx:id="friendsCountLabel" styleClass="stat-number"/>
            <Label text="Friends" styleClass="stat-label"/>
        </VBox>

        <VBox alignment="CENTER">
            <Label fx:id="messagesCountLabel" styleClass="stat-number"/>
            <Label text="Messages" styleClass="stat-label"/>
        </VBox>

        <VBox alignment="CENTER">
            <Label fx:id="eventsCountLabel" styleClass="stat-number"/>
            <Label text="Events" styleClass="stat-label"/>
        </VBox>
    </HBox>
</VBox>
